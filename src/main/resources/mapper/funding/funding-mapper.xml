	<select id="selectOneFunding" resultMap="FundingDetailVoMap">
		select *
		from funding F 
		    join funding_reward R 
		    on F.funding_no = R.funding_no
		    join attachment A
		    on F.funding_no = A.funding_no
		    join member M
		    on F.writer_no = M.member_no
		where F.funding_no = #{funding_no}
	</select>
	
